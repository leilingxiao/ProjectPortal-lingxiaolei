<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.bu.projectportal.ProjectDetailFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/projTitleTextViewId"
        android:text="Project Title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/projSummaryTextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the detail of the project" />

    <TextView
        android:id="@+id/projAuthorTextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the Author of the project" />

    <TextView
        android:id="@+id/projKeywordTextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the keyword of the project" />

    <TextView
        android:id="@+id/projFavoriteTextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is your favorite project" />

    <TextView
        android:id="@+id/projLink1TextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the link of the project" />

    <TextView
        android:id="@+id/projLink2TextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is another link of the project" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:onClick="deleteProject"
        android:text="Delete the Project" />


</LinearLayout>

